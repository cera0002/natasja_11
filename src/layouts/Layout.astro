---
const { title = "Natasja Saad" } = Astro.props;
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="/svg.js" defer></script>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    font-family: "Roboto", sans-serif;
    background: linear-gradient(135deg, #77c7aa 0%, #e56436 100%);
    background-repeat: no-repeat; /* undgå gentagelse */
    background-attachment: fixed; /* så den fylder hele skærmen */
    background-size: cover; /* dækker altid hele viewport */
    color: #1a1a1a;
    min-height: 100vh;
  }
</style>
